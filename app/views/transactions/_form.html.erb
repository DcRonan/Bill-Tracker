<div class="light-font text-dark">
  <%= form_with(model: transaction, local: true) do |form| %>
  <div class="form-group mt-4">
    <%= form.text_field :name, class: 'form-control', autofocus: true, placeholder: 'Name', required: true %>
  </div>

  <div class="form-group">
    <%= form.number_field :amount, class: 'form-control', step: :any, placeholder: 'Amount', required: true %>
  </div>

  <div class="form-group">
    <%= form.text_area :desc, class: 'form-control', step: :any, placeholder: 'Description', required: true %>
  </div>

    <div class="form-group">
      <%= form.collection_select(:group_id, Group.all, :id, :name, prompt: "select group", multiple: true, required: false) %>
    </div>
  
  <div class="form-group">
    <%= form.submit 'Create Bill', class: 'btn btn-primary w-100' %>
  </div>
<% end %>
</div>
